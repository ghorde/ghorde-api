{
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
	"compilerOptions": {
		"rootDir": "./",
		"module": "CommonJS",
		"target": "ES2022",
		"outDir": "./dist",
		"baseUrl": "src/",
		"downlevelIteration": true,
		"resolveJsonModule": true,
		// "paths": {
		// 	"@/*": ["./*"]
		// },
		"esModuleInterop": true,
		"typeRoots": ["./@types", "./node_modules/@types"]
	},
	"include": ["src/**/*.ts"]
}